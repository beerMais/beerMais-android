<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="150dp"
                                    android:layout_height="115dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_horizontal"
                                    android:animateLayoutChanges="true"
                                    app:cardCornerRadius="8dp"
                                    app:cardUseCompatPadding="true">
    <TextView
            android:text="Brand"
            android:layout_width="match_parent"
            android:layout_height="21dp" android:id="@+id/brand_textView" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="4dp" android:textAlignment="center"
            android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/can_icon" android:id="@+id/beer_imageView"
            android:layout_marginLeft="8dp" android:layout_marginTop="33dp"/>
    <TextView
            android:text="350ml"
            android:layout_width="50dp"
            android:layout_height="wrap_content" android:id="@+id/amount_textView" android:layout_marginTop="83dp"
            android:layout_marginLeft="8dp" android:textAlignment="center"/>
    <TextView
            android:text="R$ 00,00"
            android:layout_width="match_parent"
            android:layout_height="25dp" android:id="@+id/value_textView"
            android:layout_marginLeft="66dp" android:layout_marginRight="8dp" android:layout_marginTop="61dp"
            android:textAlignment="center" android:textSize="18sp" android:textColor="@android:color/black"/>
</android.support.v7.widget.CardView>